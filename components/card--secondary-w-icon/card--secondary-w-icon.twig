{% set cardsecondaryiconattributes = create_attribute() %}
{% set classes = [
        'ubc-card',
        'ubc-card--icon',
        'ubc-card--vert',
        'group',
        'text-ubc-blue',
        darkVariant ? 'ubc-card--secondary-dark': 'ubc-card--secondary',
        customClasses,
    ]
%}
<article {{ cardsecondaryiconattributes.addClass(classes) }}>
  <div class="ubc-card__media ubc-card__icon">
    {% block media %}{% endblock %}
  </div>
  <div class="flex flex-col h-full ubc-card__content_wrapper">
    <div class="ubc-card__content first-child--mt-0">
      <h3 class="card__title">
        <a href="{{ link }}" class="link-expand !text-ubc-blue group-hover--!text-ubc-grey-1"{% if target %} target="_blank" {% endif %}>
          {{ title }}
        </a>
      </h3>
      {% block content %}{% endblock %}
    </div>
    <div class="ubc-card__actions">
      <p class="text-right">
        {% embed 'kraken:icon' with {
        icon: 'icon-arrow-right',
        size: 'w-3 h-3',
        color: 'text-ubc-blue',
        } %}
        {% endembed %}
    </p>
    </div>
  </div>
</article>
