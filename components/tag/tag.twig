{#
	/**
	* @file
	* Component to render a tag.
	*/

	/* Usage example: */

    {% embed 'kraken:tag' with {
        link: 'https://ubc.ca',
        customClasses: 'p-6',
    } %}
        {% block content %}
            Some text here
        {% endblock %}
    {% endembed %}
#}

{%
  set classes = [
  'tag',
  customClasses,
]
%}
<{% if link %}a href="{{ link }}"{% else %}span{% endif %} class="{{ classes|join(" ")|trim }}" data-component-id="kraken:tag">
  {% block content %}{% endblock %}
</{% if link %}a{% else %}span{% endif %}>