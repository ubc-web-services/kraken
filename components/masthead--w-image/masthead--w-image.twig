{% set mastheadwimageattributes = create_attribute() %}
{% set classes = [
    'masthead-w-image',
    border ? 'border-unit-secondary border-b-[1rem]',
    background,
    customClasses,
  ]
%}

<section {{ mastheadwimageattributes.addClass(classes) }}>
  <div class="container mx-auto md--px-4">
    {{ drupal_block('system_breadcrumb_block') }}
  </div>
  <div class="md--container md--mx-auto md--px-4">
    <figure class="relative">
        {% block media %}{% endblock %}
        {% if imageCaption %}
          <figcaption class="absolute right-0{% if border %} mt-4{% endif %}">{{ imageCaption }}</figcaption>
        {% endif %}
    </figure>
  </div>
</section>