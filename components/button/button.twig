{#
	/**
	* @file
	* Component to render a button.
	*/

	/* Usage example: */

    {% embed 'kraken:button' with {
      customClasses: 'text test-me',
      disabled: true,
      external: true,
      id: 'my-id',
      link: 'https://ubc.ca',
      size: 'text-sm',
      style: 'unit-button--light',
      target: true,
      text: 'this is the link title',
      variant: 'unit-button--small',
    } %}
    {% endembed %}
#}

{%
  set classes = [
    'unit-button',
    style,
    size,
    customClasses,
    variant,
    disabled ? 'unit-button--disabled',
    external ? 'link-external',
]
%}
<a class="{{ classes|join(" ")|trim }}" href="{{ link }}"{% if target %}
    target="_blank"{% endif %} {% if id %}
    id="{{ id }}"{% endif %} data-component-id="kraken:button">
  {% block before %}{% endblock %}
  {{ text }}
  {% block after %}{% endblock %}
</a>