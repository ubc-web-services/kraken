{% set cardsecondaryattributes = create_attribute() %}
{% set classes = [
        'ubc-card  ',
        'ubc-card--secondary',
        'text-ubc-blue',
        'bg-light',
        'group',
        layout,
        darkVariant ? 'ubc-card--secondary-dark',
        customClasses,
    ]
%}
<article {{ cardsecondaryattributes.addClass(classes) }}>
  <div class="ubc-card__media img-cover">
    {% block media %}{% endblock %}
  </div>
  <div class="flex flex-col h-full ubc-card__content_wrapper">
    <div class="ubc-card__content first-child--mt-0">
      <h3 class="card__title">
        <a href="{{ link }}" class="link-expand !text-ubc-blue group-hover--!text-ubc-grey-1" {% if target %} target="_blank" {% endif %}>
          {{ title }}
        </a>
      </h3>
      {% block content %}{% endblock %}
    </div>
    <div class="ubc-card__actions">
      <p>
        <a href="{{ link }}" alt="{{ title }}" class="button-list link-expand-break !text-ubc-blue group-hover--!text-ubc-grey-1 group-hover--underline"{% if target %} target="_blank" {% endif %}>
          {{ linkText }}
        </a>
      </p>
    </div>
  </div>
</article>
