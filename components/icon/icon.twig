{#
	/**
	* @file
	* Component to render an icon.
	*/

	/* Usage example: */

    {% embed 'kraken:icon' with {
        icon: 'icon-mail',
        size: 'h-4 w-4',
        color: 'text-current',
        customClasses: 'p-6',

    } %}
    {% endembed %}
#}

{% set iconattributes = create_attribute() %}
{%
  set classes = [
    'inline-block',
    color ? color|clean_class: 'text-current',
    size ? size: 'w-4 h-4',
    customClasses,
]
%}
<svg class="{{ classes|join(" ")|trim }}" role="presentation" data-component-id="kraken:icon">
  <use xlink:href="#{{ icon }}"></use>
</svg>